<h1> Image Gallery</h1>

<div class="buttons">
  <button onclick="filter('all')">Show All</button>
  <button onclick="filter('people')">People</button>
  <button onclick="filter('animals')">Animals</button>
  <button onclick="filter('food')">Food</button>
  <button onclick="filter('nature')">Nature</button>
</div>

<div class="gallery" id="gallery"></div>

<div class="lightbox" id="lightbox">
  <span onclick="closeLightbox()">❌</span>
  <div class="nav-btn prev" onclick="navigate(-1)">⏮️</div>
  <img id="lightbox-img" src="">
  <div class="nav-btn next" onclick="navigate(1)">⏭️</div>
</div>

<script>
  const images = {
